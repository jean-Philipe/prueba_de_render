<div class="row text-center justify-content-center">
  <div class="col-md-8">
    <br>
    <div class="box">
      <h1>Nuevo Calcetin</h1>

      <%= form_with(model: @calcetin, url: calcetines_path, method: :post, multipart: true) do |form| %>
        <div class="form-group">
          <%= form.label :nombre %>
          <%= form.text_area :nombre, rows: 1, class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= form.label :descripcion %>
          <%= form.text_area :descripcion, rows: 3, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= form.label :estado, "Estado del Calcetín" %>
          <%= form.select :estado, [['Nuevo', 'Nuevo'], ['Casi Nuevo', 'Casi Nuevo'], ['Usado', 'Usado']], {}, class: "form-control" %>
        </div>
      
        <div class="field">
          <%= form.label :foto, 'Imagen del calcetín' %>
          <%= form.file_field :foto, accept: 'image/*' %>
        </div>
      
        <%= form.submit "Crear Calcetin", class: "btn btn-primary" %>
      <% end %>
      
    </div>
  </div>
</div>