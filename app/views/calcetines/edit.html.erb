<h2>Editar Calcetin</h2>

<%= form_with(model: @calcetin, url: update_calcetin_path(@calcetin), method: :patch, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :nombre %>
    <%= form.text_area :nombre, rows: 1, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :descripcion %>
    <%= form.text_area :descripcion, rows: 3, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :foto, 'Imagen del calcetÃ­n' %>
    <%= form.file_field :foto, accept: 'image/*' %>
  </div>

  <div class="actions">
    <%= form.submit "Actualizar calcetin" %>
  </div>
<% end %>

<%= link_to "Volver", calcetines_path %>